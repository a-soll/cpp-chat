{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "chat",
            "command": "/usr/bin/clang++",
            "type": "cppbuild",
            "args": [
                "-g",
                "-std=c++20",
                "-I.",
                "-I/opt/homebrew/include",
                "*.cpp",
                "-lcppstr",
                "-lfmt"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build",
            "options": {
                "cwd": "${workspaceRoot}"
            }
        }
    ]
}
